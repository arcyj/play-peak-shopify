{% doc %}
  @prompt
    Create a custom block with icon and text positioned under product information section, featuring shipping and delivery details with clean styling and customizable icons please make it as block not section!

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .shipping-info-block-{{ ai_gen_id }} {
    margin-top: {{ block.settings.margin_top }}px;
    margin-bottom: {{ block.settings.margin_bottom }}px;
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .shipping-info-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .shipping-info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .shipping-info-icon-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .shipping-info-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
  }

  .shipping-info-content-{{ ai_gen_id }} {
    flex: 1;
  }

  .shipping-info-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 4px;
    color: {{ block.settings.title_color }};
  }

  .shipping-info-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    color: {{ block.settings.text_color }};
  }

  @media screen and (min-width: 750px) {
    .shipping-info-list-{{ ai_gen_id }} {
      {% if block.settings.layout == 'horizontal' %}
        flex-direction: row;
        flex-wrap: wrap;
      {% endif %}
    }

    .shipping-info-item-{{ ai_gen_id }} {
      {% if block.settings.layout == 'horizontal' %}
        width: calc(50% - {{ block.settings.item_spacing | divided_by: 2 }}px);
      {% endif %}
    }
  }
{% endstyle %}

