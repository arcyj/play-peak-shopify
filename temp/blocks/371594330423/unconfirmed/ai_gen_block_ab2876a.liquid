{% doc %}
  @prompt
    Create custom Liquid code for shipping and delivery information section positioned under product information section, including delivery dates, secure payment guarantee, 14-day return policy, and store pickup information with icons and clean styling

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-info-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    margin-top: {{ block.settings.margin_top }}px;
  }

  .ai-shipping-info__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.item_spacing }}px 0;text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipping-info__items-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-shipping-info__item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .ai-shipping-info__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
    margin-top: 2px;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} {
    flex-grow: 1;}

  .ai-shipping-info__item-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    font-weight: 600;
    margin: 0 0 4px 0;
    line-height: 1.3;
  }

  .ai-shipping-info__item-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-shipping-info-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-shipping-info__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-shipping-info__item-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-shipping-info__item-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-shipping-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.section_title != blank %}
    <h3 class="ai-shipping-info__title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h3>
  {% endif %}

  <div class="ai-shipping-info__items-{{ ai_gen_id }}">
    {% if block.settings.show_delivery %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 18V6a2 2 0 0 0-2-2H4a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"></path>
            <path d="M15 18H9"></path>
            <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"></path>
            <circle cx="17" cy="18" r="2"></circle>
            <circle cx="7" cy="18" r="2"></circle>
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <div class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.delivery_title }}</div>
          <div class="ai-shipping-info__item-description-{{ ai_gen_id }}">{{ block.settings.delivery_description }}</div>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_payment %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 12l2 2 4-4"></path>
            <path d="M21 12c.552 0 1-.448 1-1V5c0-.552-.448-1-1-1H3c-.552 0-1 .448-1 1v6c0 .552.448 1 1 1h18z"></path>
            <path d="M3 10h18"></path>
            <path d="M7 15h10v4c0 .552-.448 1-1 1H8c-.552 0-1-.448-1-1v-4z"></path>
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <div class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.payment_title }}</div>
          <div class="ai-shipping-info__item-description-{{ ai_gen_id }}">{{ block.settings.payment_description }}</div>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_returns %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 7v10a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2z"></path>
            <path d="M8 7V5a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            <path d="M12 11l0 6"></path>
            <path d="M9 14l3-3 3 3"></path>
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <div class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.returns_title }}</div>
          <div class="ai-shipping-info__item-description-{{ ai_gen_id }}">{{ block.settings.returns_description }}</div>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_pickup %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <div class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.pickup_title }}</div>
          <div class="ai-shipping-info__item-description-{{ ai_gen_id }}">{{ block.settings.pickup_description }}</div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

