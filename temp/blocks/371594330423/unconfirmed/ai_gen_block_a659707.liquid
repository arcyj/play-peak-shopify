{% doc %}
  @prompt
    Create custom Liquid code for shipping and delivery information section with delivery dates, secure payment guarantee, 14-day return policy, and store pickup information with icons and clean styling

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-info-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding }}px;
    border-radius: {{ block.settings.border_radius }}px;
    border: 1px solid {{ block.settings.border_color }};}

  .ai-shipping-info__title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.spacing }}px 0;text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipping-info__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ block.settings.spacing }}px;
  }

  .ai-shipping-info__item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: {{ block.settings.item_padding }}px;
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    border: 1px solid {{ block.settings.item_border_color }};
  }

  .ai-shipping-info__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};flex-shrink: 0;
    margin-top: 2px;
  }

  .ai-shipping-info__content-{{ ai_gen_id }} {
    flex-grow: 1;}

  .ai-shipping-info__item-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.item_title_size }}px;
    font-weight: 600;
    margin: 0 0 4px 0;
  }

  .ai-shipping-info__item-text-{{ ai_gen_id }} {
    color: {{ block.settings.secondary_text_color }};
    font-size: {{ block.settings.item_text_size }}px;
    margin: 0;line-height: 1.4;
  }

  .ai-shipping-info__highlight-{{ ai_gen_id }} {
    color: {{ block.settings.highlight_color }};
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-shipping-info__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
    
    .ai-shipping-info__item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-shipping-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <h3 class="ai-shipping-info__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
  {% endif %}<div class="ai-shipping-info__grid-{{ ai_gen_id }}">
    {% if block.settings.show_delivery %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 0V6a2 2 0 012-2h4a2 2 0 012 2v1m-6 0h8m-8 0l-2 9a3 3 0 003 3h6a3 3 0 003-3l-2-9m-8 0V9a2 2 0 012-2h4a2 2 0 012 2v2.5" />
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <h4 class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.delivery_title }}</h4>
          <p class="ai-shipping-info__item-text-{{ ai_gen_id }}">
            {{ block.settings.delivery_text }}{% if block.settings.delivery_highlight != blank %}
              <span class="ai-shipping-info__highlight-{{ ai_gen_id }}">{{ block.settings.delivery_highlight }}</span>
            {% endif %}
          </p>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_payment %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <h4 class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.payment_title }}</h4>
          <p class="ai-shipping-info__item-text-{{ ai_gen_id }}">
            {{ block.settings.payment_text }}
            {% if block.settings.payment_highlight != blank %}
              <span class="ai-shipping-info__highlight-{{ ai_gen_id }}">{{ block.settings.payment_highlight }}</span>
            {% endif %}
          </p>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_returns %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <h4 class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.returns_title }}</h4>
          <p class="ai-shipping-info__item-text-{{ ai_gen_id }}">
            {{ block.settings.returns_text }}
            {% if block.settings.returns_highlight != blank %}
              <span class="ai-shipping-info__highlight-{{ ai_gen_id }}">{{ block.settings.returns_highlight }}</span>
            {% endif %}
          </p>
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_pickup %}
      <div class="ai-shipping-info__item-{{ ai_gen_id }}">
        <div class="ai-shipping-info__icon-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="ai-shipping-info__content-{{ ai_gen_id }}">
          <h4 class="ai-shipping-info__item-title-{{ ai_gen_id }}">{{ block.settings.pickup_title }}</h4>
          <p class="ai-shipping-info__item-text-{{ ai_gen_id }}">
            {{ block.settings.pickup_text }}
            {% if block.settings.pickup_highlight != blank %}
              <span class="ai-shipping-info__highlight-{{ ai_gen_id }}">{{ block.settings.pickup_highlight }}</span>
            {% endif %}
          </p>
        </div>
      </div>
    {% endif %}
  </div>
</div>

