      "label": "Show delivery information",
      "default": true
    },
    {
      "type": "text",
      "id": "delivery_title",
      "label": "Delivery title",
      "default": "Fast Delivery"
    },
    {
      "type": "text",
      "id": "delivery_text",
      "label": "Delivery text",
      "default": "Estimated delivery within 2-5 business days"
    },
    {
      "type": "header",
      "content": "Secure Payment"
    },
    {
      "type": "checkbox",
      "id": "show_secure_payment",
      "label": "Show secure payment",
      "default": true
    },
    {
      "type": "text",
      "id": "secure_payment_title",
      "label": "Secure payment title",
      "default": "Secure Payment"
    },
    {
      "type": "text",
      "id": "secure_payment_text",
