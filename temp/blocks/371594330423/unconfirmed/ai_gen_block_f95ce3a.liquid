{% doc %}
  @prompt
    Create custom Liquid code for shipping and delivery information section positioned below buy button and under product icons, including delivery dates, secure payment guarantee, 14-day return policy, and store pickup information with icons and clean styling

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .shipping-info-{{ ai_gen_id }} {
    margin-top: {{ block.settings.top_margin }}px;
    margin-bottom: {{ block.settings.bottom_margin }}px;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
  }

  .shipping-info-container-{{ ai_gen_id }} {
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
    padding: 20px;
  }

  .shipping-info-title-{{ ai_gen_id }} {
    font-size: calc({{ block.settings.text_size }}px * 1.2);
    font-weight: 600;
    margin-bottom: 15px;
    text-align: {{ block.settings.text_alignment }};
  }

  .shipping-info-items-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: 15px;
  }

  .shipping-info-item-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 10px;
  }

  .shipping-info-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shipping-info-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.icon_color }};
  }

  .shipping-info-text-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .shipping-info-label-{{ ai_gen_id }} {
    font-weight: 600;
    margin-bottom: 2px;
  }

  .shipping-info-description-{{ ai_gen_id }} {
    font-size: calc({{ block.settings.text_size }}px * 0.9);
    opacity: 0.85;
  }

  @media screen and (max-width: 749px) {
    .shipping-info-items-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
  }
{% endstyle %}

<div class="shipping-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="shipping-info-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <div class="shipping-info-title-{{ ai_gen_id }}">{{ block.settings.title }}</div>
    {% endif %}<div class="shipping-info-items-{{ ai_gen_id }}">
      {% if block.settings.show_delivery %}
        <div class="shipping-info-item-{{ ai_gen_id }}">
          <div class="shipping-info-icon-{{ ai_gen_id }}">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M19.5,8H17V6A2,2,0,0,0,15,4H5A2,2,0,0,0,3,6V16a1,1,0,0,0,1,1H5a3,3,0,0,0,6,0h2a3,3,0,0,0,6,0h1a1,1,0,0,0,1-1V11.5A3.5,3.5,0,0,0,19.5,8ZM8,18a1,1,0,1,1,1-1A1,1,0,0,1,8,18Zm8,0a1,1,0,1,1,1-1A1,1,0,0,1,16,18Zm4-3H19a3,3,0,0,0-6,0H9a3,3,0,0,0-6,0H5V6H15V13h5Z"/>
              <path d="M17,10h4v2H17Z"/>
            </svg>
          </div>
          <div class="shipping-info-text-{{ ai_gen_id }}">
            <div class="shipping-info-label-{{ ai_gen_id }}">{{ block.settings.delivery_title }}</div>
            <div class="shipping-info-description-{{ ai_gen_id }}">{{ block.settings.delivery_text }}</div>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_secure_payment %}
        <div class="shipping-info-item-{{ ai_gen_id }}">
          <div class="shipping-info-icon-{{ ai_gen_id }}">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12,1,3,5v6c0,5.55,3.84,10.74,9,12,5.16-1.26,9-6.45,9-12V5ZM19,11c0,4.52-2.98,8.69-7,9.93C7.98,19.69,5,15.52,5,11V6.3l7-3.11,7,3.11Z"/>
              <path d="M7.91,12.09,10.5,14.67l5.59-5.59L14.67,7.67,10.5,11.83,9.33,10.67Z"/>
            </svg>
          </div>
          <div class="shipping-info-text-{{ ai_gen_id }}">
            <div class="shipping-info-label-{{ ai_gen_id }}">{{ block.settings.secure_payment_title }}</div>
            <div class="shipping-info-description-{{ ai_gen_id }}">{{ block.settings.secure_payment_text }}</div>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_returns %}
        <div class="shipping-info-item-{{ ai_gen_id }}">
          <div class="shipping-info-icon-{{ ai_gen_id }}">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.65,6.35C16.2,4.9,14.21,4,12,4A8,8,0,0,0,4,12a8,8,0,0,0,8,8c3.73,0,6.84-2.55,7.73-6h-2.08A6,6,0,0,1,12,18a6,6,0,0,1-6-6,6,6,0,0,1,6-6c1.66,0,3.14.69,4.22,1.78L13,11h7V4Z"/>
            </svg>
          </div>
          <div class="shipping-info-text-{{ ai_gen_id }}">
            <div class="shipping-info-label-{{ ai_gen_id }}">{{ block.settings.returns_title }}</div>
            <div class="shipping-info-description-{{ ai_gen_id }}">{{ block.settings.returns_text }}</div>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_pickup %}
        <div class="shipping-info-item-{{ ai_gen_id }}">
          <div class="shipping-info-icon-{{ ai_gen_id }}">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12,2C8.13,2,5,5.13,5,9c0,5.25,7,13,7,13s7-7.75,7-13C19,5.13,15.87,2,12,2zm0,11.5c-1.38,0-2.5-1.12-2.5-2.5s1.12-2.5,2.5-2.5,2.5,1.12,2.5,2.5-1.12,2.5-2.5,2.5z"/>
            </svg>
          </div>
          <div class="shipping-info-text-{{ ai_gen_id }}">
            <div class="shipping-info-label-{{ ai_gen_id }}">{{ block.settings.pickup_title }}</div>
            <div class="shipping-info-description-{{ ai_gen_id }}">{{ block.settings.pickup_text }}</div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
