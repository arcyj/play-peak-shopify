      "default": true
    },
    {
      "type": "text",
      "id": "returns_title",
      "label": "Returns title",
      "default": "Easy Returns"
    },
    {
      "type": "text",
      "id": "returns_text",
      "label": "Returns text",
      "default": "14-day return policy for all purchases"
    },
    {
      "type": "header",
      "content": "Store Pickup"
    },
    {
      "type": "checkbox",
      "id": "show_pickup",
      "label": "Show store pickup",
      "default": true
    },
    {
      "type": "text",
      "id": "pickup_title",
      "label": "Pickup title",
      "default": "Store Pickup"
    },
    {
      "type": "text",
